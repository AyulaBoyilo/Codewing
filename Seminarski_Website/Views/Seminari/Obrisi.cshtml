@model Seminarski_Website.Models.Seminar

@{
    ViewBag.Title = "Obrisi";
}

<h2>Brisanje seminara</h2>

<h3>Jeste li sigurni da želite obrisati ovaj seminar?</h3>
<p class="text-info">Pažnja! Ako obrišete navedeni seminar automatski se brišu i sve predbilježbe koje sadrže taj seminar.</p>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Datum)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Popunjen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Popunjen)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-info" /> | @Html.ActionLink("Natrag na popis", "Pretraga")
        </div>
    }
</div>
